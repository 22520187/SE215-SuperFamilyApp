<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/teal_700"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_previous" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginTop="30dp"
                android:text="Profile update"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />



            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="350dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="300dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_notification" />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp" >


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_date"
                android:background="@drawable/icon_circle_green"
                android:scaleType="centerInside" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update date of birth"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />


            <ImageButton
                android:id="@+id/iv_arrow_dob"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Next button"
                android:scaleType="centerInside"
                android:src="@drawable/ic_next" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_date_of_birth"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:hint="12/05/1985"
            android:inputType="date"
            android:background="@drawable/input_background"
            android:drawableRight="@drawable/ic_calendar"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_phone"
                android:background="@drawable/icon_circle_orange"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change phone number"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/iv_arrow_cpn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:contentDescription="Next button" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:hint="012*********023"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:drawableRight="@drawable/ic_eye"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_email"
                android:background="@drawable/icon_circle_red"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Email"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />
            <ImageButton
                android:id="@+id/iv_arrow_ce"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:contentDescription="Next button" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:hint="huynguyen@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_background"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pass"
                android:background="@drawable/icon_circle_blue"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change password"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />
            <ImageButton
                android:id="@+id/iv_arrow_cp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_next"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:contentDescription="Next button" />

        </LinearLayout>

        <TextView
            android:id="@+id/tx_current_pass"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="Current password"
            android:layout_marginStart="80dp"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        
        <EditText
            android:id="@+id/et_current_pass"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="5dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="20dp"
            android:hint="****************"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:drawableRight="@drawable/ic_eye"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tx_new_pass"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="New password"
            android:layout_marginStart="80dp"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>

        <EditText
        android:id="@+id/et_new_pass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/imageView"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        android:hint="Enter new password"
        android:inputType="number"
        android:background="@drawable/input_background"
        android:drawableRight="@drawable/ic_eye"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:backgroundTint="@color/teal_700"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>