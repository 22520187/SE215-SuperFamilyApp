<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Thanh tiêu đề -->
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_header_message"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_previous" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:padding="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"

                android:src="@drawable/avatar_border_orange" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ava_brother" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="110dp"
                android:textSize="24dp"
                android:text="Tony" />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:padding="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/avatar_border_orange" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ava_brother" />

        <!-- Message Bubble -->
        <TextView
            android:id="@+id/message_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:background="@drawable/bubble_background_left"
            android:padding="12dp"
            android:text="Mom I'm so happy today!"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/tvHintMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="     Hôm nay bạn vẫn chưa nhắn tin cho người dùng này, hãy gửi 1 tin nhắn đến họ"
        android:drawableStart="@drawable/ic_i"
        android:drawableEnd="@drawable/ic_x"
        android:layout_marginBottom="10dp"
        />

    <HorizontalScrollView
        android:id="@+id/horizontalSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:padding="8dp"
                android:background="@drawable/input_background"
                android:text="Tell me about your day"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:background="@drawable/input_background"
                android:text="I love you son"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center" />



        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:hint="Nhập tin nhắn..."
            android:background="@drawable/input_background"
            android:drawableEnd="@drawable/ic_emoji"
            android:paddingEnd="12dp"
            android:paddingStart="24dp"
            android:imeOptions="actionSend"
            android:inputType="text"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_image"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <!-- Bảng chọn emoji -->
    <LinearLayout
        android:id="@+id/emojiContainer"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@android:color/white"
        android:elevation="4dp">

        <GridView
            android:id="@+id/gridEmoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="8"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>
